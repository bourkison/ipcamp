<h1><%= @listing.name %></h1>

<%= image_tag @listing.photo %>
<p><%= @listing.description %></p>

<div class="bid-container">
	<% @listing.bids.each do |b| %>

		<div class="bid-indiv">
			<%= link_to b.user.username, b.user %>
			<div><%= b.amount %></div>
		</div>
	<% end %>
</div>

<div class="form-container">
	<%= form_for @bid do |b| %>
	<fieldset>
		<%= b.label :amount, "Enter an amount" %>
		<%= b.text_field :amount %>
	</fieldset>

	<%= b.submit "Place bid!" %>
	<% end %>
</div>


<% if @current_user == @listing.user %>
	<%= link_to "Delete Listing", @listing, :method => 'delete' %>
<% end %>
