<!-- THIS IS THE HOME PAGE -->
<h1>IPCamp</h1>

<% if @current_user.present? %>
  <p>Welcome back <%= @current_user.username %></p>
<% else %>
  <p><%= link_to "Login", login_path %> or <%= link_to "Sign Up", new_user_path %> to sell or buy intellectual property!</p>
<% end %>

<ul>
  <% if @current_user.present? %>
    <% if @current_user.follows.present? %>
      <p><i>Followed listings: </i></p>
      <% @current_user.follows.each do |follow| %>
        <li><%= link_to follow.listing.name, follow.listing %></li>
      <% end %>
    <% else %>
      <p><i>You have no followed listings. Search a listing and click follow to have some.</i></p>
    <% end %>
  <% end %>
</ul>
